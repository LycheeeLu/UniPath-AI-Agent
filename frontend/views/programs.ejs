<!DOCTYPE html>
<html>
<head>
  <title>Program Recommendations</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-50 p-10">
  <div class="max-w-4xl mx-auto bg-white shadow p-6 rounded">
    <% if (resume.error) { %>
      <p class="text-red-500 font-bold">❌ <%= resume.error %></p>
    <% } else { %>
      <h1 class="text-2xl font-bold mb-4">🧠 Field: <%= resume.summary?.field || "Unknown" %></h1>

      <% if (resume.recommendations?.programs?.recommended_programs?.length) { %>
        <h2 class="text-xl font-semibold mb-2">🎓 Recommended Programs</h2>
        <ul>
          <% resume.recommendations.programs.recommended_programs.forEach(p => { %>
            <li class="border-b py-2">
              <a href="<%= p.link %>" target="_blank" class="text-blue-600 font-medium"><%= p.title %></a>
              <p class="text-sm text-gray-700"><%= p.snippet %></p>
            </li>
          <% }) %>
        </ul>
      <% } %>

      <% if (resume.recommendations?.faculty?.faculty_matches) { %>
        <h2 class="text-xl font-semibold mt-6 mb-2">👩‍🏫 Matching Professors</h2>
        <pre class="bg-gray-100 p-3 rounded text-sm text-gray-700"><%= JSON.stringify(resume.recommendations.faculty.faculty_matches, null, 2) %></pre>
      <% } %>
    <% } %>
  </div>
</body>
</html>
